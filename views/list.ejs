<%- include("header") -%>
<div class="box" id="heading">
    <h1> <%= kindOfDay %> </h1>
</div>

<div class="box">
    <%  newItems.forEach((item) =>{ %>

    <form action="/delete" method="POST">
        <div class="item">
            <!-- checked item's _id is assigned to value field to send it via POST request, onChange() is to give POST request without submit button -->
            <input type="checkbox" name="checkbox" value="<%=item._id %>" onChange="this.form.submit()">
            <p><%= item.name  %></p>
        </div>
        
    </form>
    <% }); %>
    
    <form class="item" action="/<%= route %>" method="post">
        <input type="text" name="item" placeholder="add item" autocomplete="off">
        <button class="btn" type="submit"> + </button>
    </form>

</div>
<%- include("footer") -%>